<div class="container" id="courses">
<div class="row">
    <% courses.forEach( function(course) { %>
      <div class="col s12 m6">
        <div class="card">
          <div class="card-image">
        <% var link_url = '/course/' + course.id %>
        <% var img_url = course.course_image %>
        <img src=" <%= img_url %>" alt="">

        <a class="btn-floating btn-large halfway-fab waves-effect waves-light green" href=<%= link_url %> > <i class="material-icons">search</i></a>
        </div>

        <div class="card-content">
          <span class="card-title"> <%= course.name %> - $<%= course.price %></span>
          <p> <%= course.description %> </p>
        </div>

      </div>
      </div>

      <% }); %>

</div>

